{
  "title": "E-commerce Add to Cart",
  "steps": [
    {
      "type": "setViewport",
      "width": 1280,
      "height": 720
    },
    {
      "type": "navigate",
      "url": "https://shop.example.com/product/123"
    },
    {
      "type": "click",
      "selectors": [
        ["[data-testid='add-to-cart']"],
        [".add-to-cart-btn"],
        ["#addToCart"]
      ],
      "offsetX": 10,
      "offsetY": 5
    },
    {
      "type": "fill",
      "selectors": [
        ["#quantity"],
        ["[name='quantity']"]
      ],
      "value": "2"
    },
    {
      "type": "click",
      "selectors": [
        ["[data-testid='checkout-button']"],
        ["#checkout"]
      ],
      "offsetX": 15,
      "offsetY": 10
    }
  ]
}
